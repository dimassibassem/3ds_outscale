html
    head
        title Authentication
        meta(name='description', content='Home page')
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/public/style.css')
        link(rel='icon', href='/public/nuit.jpeg', type='image/x-icon')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        nav.nav
            img(src='/public/nuit.jpeg')
            h1.center Authentication

        h2.center#pug-success-message
        .container
            .row
                    if showLogin
                        .col
                            h3.center Login Form
                            form(action='/login', method='post').center
                                div
                                    label Username:
                                    input(type='text', name='username')
                                div
                                    label Password:
                                    input(type='password', name='password')
                                div
                                    input(type='submit', value='Log In')
                                    h4.text OR
                                    a(href='/').text SIGN UP
                    if showRegistration
                        .col
                            h3.center Registration Form
                            form(action='/register', method='post').center
                                div
                                    label Username:
                                    input(type='text', name='username')
                                div
                                    label Password:
                                    input(type='password', name='password')
                                div
                                    input(type='submit', value='Register')
                                    h4.text OR
                                    a(href='/').text SIGN IN
                    .col
                        img#sauve(src='/public/sauve.jpg', alt='sauvtage')

        if showSocialAuth
            hr
            h2.center Social Login
                br
                a.btn.btn-secondary(href='/auth/github', role='button').text Login with Github!
                a.btn.btn-danger(href='/auth/google', role='button').text Login with Google!
                a.btn.btn-primary(href='/auth/facebook', role='button').text Login with Facebook!
        footer
            h2.center Â© EPI-Still-InBeta
